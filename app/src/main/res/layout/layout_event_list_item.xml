<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="5dp"
    android:background="@drawable/fragment_event_list_item_border"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/eventListItem_imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/eventListItem_textView_name"
        android:theme="@style/Theme.Components.EventListItem.Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/eventListItem_imageView" />

    <TextView
        android:id="@+id/eventListItem_textView_description"
        android:theme="@style/Theme.Components.EventListItem.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/eventListItem_imageView"
        android:layout_below="@id/eventListItem_textView_name"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/eventListItem_textView_priceRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="3dp"
        android:paddingRight="3dp" />

</RelativeLayout>