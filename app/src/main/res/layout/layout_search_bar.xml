<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_coral"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/searchBar_editText"
            style="@style/Theme.Components.SearchBar.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:height="50dp"
            android:hint="@string/searchBar_hint" />

        <Button
            android:id="@+id/searchBar_searchButton"
            style="@style/Theme.Components.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/searchBar_editText"
            android:height="50dp"
            android:text="@string/searchBar_searchButton"
            android:textSize="24sp"
            app:icon="@drawable/search_icon_50_dark"
            app:iconSize="20dp" />

    </LinearLayout>

</RelativeLayout>